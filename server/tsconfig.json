{
    "compilerOptions": {
        "target": "ES2019",
        "lib": ["ES2019", "DOM"],
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "inlineSources": true,
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
